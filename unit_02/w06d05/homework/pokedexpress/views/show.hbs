
<h1 class="header"><a href='/pokemon'>{{name}}</a></h1>


<div class='show-info'>

	<ul class='right-info'>
		<li>{{name}}</li>
		<li>{{id}}</li>
		<li>{{type}}</li>
		<!-- stats -->
		<li>hp: {{stats.hp}}</li>
		<li>attack: {{stats.attack}}</li>
		<li>defense: {{stats.defense}}</li>
		<li>spattack: {{stats.spattack}}</li>
		<li>spdefense: {{stats.defense}}</li>
		<li>speed: {{stats.speed}}</li>
	</ul>

		<!-- <li>moves: {{moves}} MAKE LINK TO FULL MOVESET</li> -->
	<div class='left-info'>
		<img src="{{img}}" alt="">
	</div>	

</div>



<form action="/pokemon/{{id}}?_method=DELETE" method="post">
